<Window x:Class="myscr.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myscr"
        mc:Ignorable="d"
        Title="Setting" Height="246.383" Width="394.468" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="设置图片路径" HorizontalAlignment="Left" Margin="45,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="path" HorizontalAlignment="Left" Height="23" Margin="45,98,0,0" TextWrapping="NoWrap" Text=""  VerticalAlignment="Top" Width="150"/>
        <Button Content="浏览" HorizontalAlignment="Right" Margin="0,98,45,0" VerticalAlignment="Top" Width="75" Click="Browser_Click" Height="23"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="45,0,0,40" VerticalAlignment="Bottom" Width="75" Click="OK_Click"/>
        <Button Content="取消" HorizontalAlignment="Right" Margin="0,0,45,40" VerticalAlignment="Bottom" Width="75" Click="Cancel_Click"/>
       
    </Grid>
</Window>
